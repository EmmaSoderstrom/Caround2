<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/dialog_close_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:src="@drawable/ic_close_black_24dp" />

    <TextView
        android:id="@+id/dialog_friend_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="22sp"
        android:text="dilog_first_name"
        android:textColor="@color/textColoPrimary"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/dialog_friend_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/dialog_friend_first_name"
        android:textSize="16sp"
        android:text="dilog_last_name"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/dialog_friend_distans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/dialog_friend_last_name"
        android:textSize="34sp"
        android:text="dilog_distans"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/dialog_friend_distans_subtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_below="@+id/dialog_friend_distans"
        android:text="dilog_distans_subtext"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        android:layout_below="@+id/dialog_friend_distans_subtext">

        <ImageButton
            android:id="@+id/dialog_send_Massage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_mail_outline_yellow_64dp"
            android:background="@null"
            />

        <ImageButton
            android:id="@+id/dialog_make_call"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_phone_green_64dp"
            android:background="@null"/>

    </LinearLayout>
</RelativeLayout>